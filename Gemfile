source 'http://rubygems.org'

gem 'rails', '3.1.0'
gem 'sqlite3'
gem 'omniauth-facebook'
gem 'oa-core'

group :assets do
  gem 'sass-rails', "  ~> 3.1.0"
  gem 'coffee-rails', "~> 3.1.0"
  gem 'uglifier'
end

gem 'jquery-rails'
gem 'devise'
gem 'rails_autolink'

group :development, :test do
  gem 'rspec'
  gem 'rspec-rails'
  gem 'factory_girl'
  gem 'factory_girl_rails'
  gem 'rcov'
  gem 'ci_reporter'
  gem 'cucumber-rails', require: false
  gem 'database_cleaner'
end

group :production do
  gem 'pg'
  gem 'execjs'
  gem 'therubyracer'
end


