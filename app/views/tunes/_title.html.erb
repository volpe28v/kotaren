<div class="row-fluid">
  <div class="span1"></div>
  <div class="span5">
    <% if @user.icon_url.blank? == false %>
      <%= image_tag(@user.icon_url, :class => "user-icon-img") %>
    <% end %>
    <span class="user-name"><%= link_to @user.default_name, user_tunes_path(@user) %></span>
    <span class="this-is-you">
      <% if @user == current_user %>
        <%= raw('<span class="you">This is You!</span>') %>
      <% end %>
    </span>
  </div>

  <div class="span3">
<div class="user-option">
  <dl>
    <dt>youtube</dt>
    <dd><%= @user.youtube_name.blank? ? "-" : link_to(@user.youtube_name, @user.youtube_url) %></dd>
  </dl>
  <dl>
    <dt>twitter</dt>
    <dd><%= @user.twitter_name.blank? ? "-" : link_to(@user.twitter_name, @user.twitter_url) %></dd>
  </dl>
</div>
  </div>

  <div class="span3">
<div class="user-option">
  <dl>
    <dt>guitar</dt>
    <dd><%= @user.guitar.blank? ? "-" : @user.guitar %></dd>
  </dl>
  <dl>
    <dt>tuning</dt>
    <dd><%= @user.tuning.blank? ? "-" : @user.tuning %></dd>
  </dl>
</div>

  </div>
</div>


